@model BookModel;
@{
    ViewData["Title"] = "Add Book";
}

<div class="container">
    <h3 class="display-4">Add book</h3>
    <form method="post" asp-action="AddBook" asp-controller="Book">
        <div class="form-group">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Author"></label>
            <input asp-for="Author" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <label asp-for="Pages"></label>
            <input asp-for="Pages" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Add Book" class="btn btn-outline-primary" />
        </div>
    </form>
</div>

