@model IEnumerable<BookStore.Models.BookModel>
@{
    ViewData["Title"] = "Books";
}

<div class="container">
    <h1>All Books</h1>
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-md-4" >
                <div class="card mb-4 shadow-sm" style="height: 580px"> 
                    <img class="bd-placeholder-img card-img-top" src="@book.Source" style="max-height: 400px" asp-append-version="true" />
                    <div class="card-body">
                        <h3 class="card-title">@book.Title</h3>
                        <p class="card-text">@book.Description</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a  asp-controller="Book" asp-action="GetBook" asp-route-id="@book.Id" class="btn btn-sm btn-outline-secondary">View content</a>
                            </div>
                            <small class="text-muted">@book.Author.ToUpper()</small>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>
